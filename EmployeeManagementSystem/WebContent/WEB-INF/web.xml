<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>EmployeeManagementSystem</display-name>
  <welcome-file-list>
    <welcome-file>loginform.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  <servlet-name>LoginServlet</servlet-name>
  <servlet-class>com.srs.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>LoginServlet</servlet-name>
  <url-pattern>/home</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>UserRegistration</servlet-name>
  <servlet-class>com.srs.servlets.UserRegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>UserRegistration</servlet-name>
  <url-pattern>/registeruser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>AddEmployee</servlet-name>
  <servlet-class>com.srs.servlets.AddEmployee</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>AddEmployee</servlet-name>
  <url-pattern>/addemployee</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>EditEmployee</servlet-name>
  <servlet-class>com.srs.servlets.EditEmployeeServletTest</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>EditEmployee</servlet-name>
  <url-pattern>/editemployee</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>DeleteEmployeeServlet</servlet-name>
  <servlet-class>com.srs.servlets.DeleteEmployeeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>DeleteEmployeeServlet</servlet-name>
  <url-pattern>/deleteemployee</url-pattern>
  </servlet-mapping>
  
  
</web-app>